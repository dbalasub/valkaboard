
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
     <div class="col-md-3">

      <div class="thumbnail">
        <%= link_to " #{image_tag listing.image.url } ".html_safe, listing, class: "btn btn-link"%>
        <div class="caption">
          <h3><%= listing.name %><br></h3>
          <p> <%= number_to_currency(listing.price )%><br></p>
          <p><%= "Sold by #{listing.user.name }" %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>



<%= link_to 'New Listing', new_listing_path ,class: "btn btn-link"%>
